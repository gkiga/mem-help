<!DOCTYPE html>
<style>
.container {
  display: flex;
  flex-wrap: wrap;
  width: 75%;
}
</style>
<br>
<br>
<h1 class="text-center">
My Requests Page
</h1>
<br>
<br>
<h3><p class="text-primary">My Sent Requests</p></h3>
<% requests.each do |request| %>
<% if current_user.try(:id)==request.user_id %>
  
  <div id="<%= dom_id(request) %>">
    <div class="container card p-3 mb-2 bg-light text-dark">
    <div class="card-body">
    <div class = "text-left">
    <ul>
        <p><b>  Description: <%= request.description%></b></p>
        <p><b>  Category: <%= request.category%></b></p>
        <p><b>  Request Sender: <%= request.sender%> </b></p>
        <p><b>  Request Recipient: <%= request.recipient %> </b></p>
    

      <%= link_to 'üîé', request_path(request) %>
      <%= link_to 'üñã', edit_request_path(request) %>
      <%= button_to 'üóë', request_path(request), method: :delete %>
     </ul>
    </div>
    </div>
    </div>
<% end %>
<%end %>
<br>
<br>
<h3><p class="text-primary">My Received Requests</p></h3>
<% requests.each do |request| %>
<% if current_user.try(:email)==request.recipient %>
  
  <div id="<%= dom_id(request) %>">
    <div class="container card p-3 mb-2 bg-light text-dark">
    <div class="card-body">
    <div class = "text-left">
    <ul>
        <p><b>  Description: <%= request.description%></b></p>
        <p><b>  Category: <%= request.category%></b></p>
        <p><b>  Request Sender: <%= request.sender%> </b></p>
        <p><b>  Request Recipient: <%= request.recipient %> </b></p>
        <p><b>  Accepted: 
        <% if request.acceptedFlag==true%>
          ‚úî
        <% else %>
          ‚ùå
        <% end %>
        </b><p>
        <p><b>  Completed: 
        <% if request.completedFlag==true%>
          ‚úî
        <% else %>
          ‚ùå
        <% end %>
        </b><p>
    

      <%= link_to 'üîé', request_path(request) %>
      <%= link_to 'üñã', edit_request_path(request) %>
      <%= button_to 'üóë', request_path(request), method: :delete %>
     </ul>
    </div>
    </div>
    </div>
<% end %>
<%end %>

