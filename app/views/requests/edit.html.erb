
<h1 class="text-center">
Edit Request
</h1>


<%= form_with model: request, url: request_path, method: :patch, local: true, scope: :request do |f| %>
<% if current_user.try(:id)==request.user_id %>
  <div>
    <h5>Description of Your Request</h5>
    <%= f.text_field :description %>
  </div>
<br>
<br>
  <div>
    <h5>Category</h5>
    <p>For example, art, music, or biology</p>
    <%= f.text_field :category%>
  </div>
<br>
<br>
  <div>
    <h5>Learning Preference</h5>
    <p>For example, Pre-recorded videos, Live Videoconferencing, or 1-on-1 meeting in person</p>
    <%= f.text_field :learningPreference%>
  </div>
<br>
<br>

<%#if current_user.try(:id)==request.user_id %>
<div>
    <h5>How many hours do you think this teacher will need to complete the task requested?</h5>
 <%= f.text_field :new_volunteer_hours%>
    
  </div>
      <%# radio_button_tag "new_volunteer_hours", 1.00, 1.00 %>
     <%#label_tag "new_volunteer_hours", '1 Hour' %>
      <%# radio_button_tag "new_volunteer_hours", 2.00, 2.00 %>
     <%# label_tag "new_volunteer_hours", '2 Hours' %>
         <%# radio_button_tag "new_volunteer_hours", 3.00, 3.00 %>
     <%# label_tag "new_volunteer_hours", '3 Hours' %>
         <%# radio_button_tag "new_volunteer_hours", 4.00, 4.00 %>
     <%# label_tag "new_volunteer_hours", '4 Hours' %>
     
<%end%>


<% if current_user.try(:id)==request.recipient %>
  <div>
    <h5>Accept Request?</h5>
     <%= f.radio_button "acceptedFlag",  true %>
     <%= label_tag "acceptedFlag", 'Accept Request' %>
    <%= f.radio_button "acceptedFlag", false %>
     <%= label_tag "acceptedFlag", 'Decline Request' %>
  </div>
  
  <div>
    <h5>Completed Request?</h5>
      <%= f.radio_button "completedFlag",true %>
     <%= label_tag "completedFlag", 'Complete Request' %>
    <%= f.radio_button "completedFlag", false %>
     <%= label_tag "completedFlag", 'Request Not Completed' %>
  </div>


  <%end%>
  <%= f.submit "Update Request" %>

<% end %>


  