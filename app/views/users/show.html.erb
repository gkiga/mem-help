<h1><%=user.first_name%> <%=user.last_name%></h1><br />

<% if user.avatar.attached? %>
  <%= image_tag((url_for(user.avatar)), style: 'display: block; margin: auto; width: 20%;')%>
<%end%>

<div class="card">
  <div class="card-header">
    <h5>About</h5>
  </div>
  <div class="card-body">
  <h6><%=user.bio%></h6>
    <ul>
        
        <li>Major: <%=user.major %> </li>
        <li>Interests: <%=user.interests %> </li>
        <li>Contact Information: <%=user.contact_info %> </li>
        <li>Email: <%=user.email %> </li>
        <li>Volunteer Hours: <%=user.volunteer_hours %> </li>
    </ul>
   
    <% if user != current_user %>
    <%= link_to "Send Message", new_message_path(:recipient_id => user.id, :recipient_name => "#{user.first_name} #{ user.last_name}", class: "btn btn-primary"),:class => "btn btn-primary text-center" %>                                                                                                                                               
    <%= link_to "Direct Request", new_request_path(:recipient => user.id, :recipient_name => "#{user.first_name} #{ user.last_name}", class: "btn btn-primary"),:class => "btn btn-primary text-center" %>     
    <%= link_to "Add New Review", new_review_path(:user_id=> user.id),:class => "btn btn-primary primary" %> 
    <%= link_to "See Reviews", reviews_path(:user_id=> user.id),:class => "btn btn-primary primary" %> 
    <% else %>
    <%= link_to 'Personalize Profile', edit_user_registration_path, :class => "btn btn-primary primary" %>
    <% end %>

  </div>
</div>


<br />

<div class="card">
  <div class="card-header">
    <h5>Videos</h5>
  </div>
  <div class="card-body">
    
    <ul>
      <% videos.each do |video| %>
      <li>
          <%= link_to video.title, video_path(video)%>
      </li>

      <% end %>
    </ul>
        
    <% if user == current_user %>
      <%= link_to 'Add Video', new_account_video_path, :class => "btn btn-primary" %>
    <% end %>

  </div>

</div>



