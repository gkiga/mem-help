

<div align="center">
  <h2><%= @video.title %></h2>

  <%= video_tag(url_for(@video.clip), style:"width:900px;height: auto",controls:"") %>

  <h5 align="left">
  <br>
    <strong>Description:</strong>
    <%= @video.description %>
  </h5>

  <br>

  <% if current_user == @video.creator %>
   <%= link_to "Edit",edit_video_path(@video),class: "btn btn-outline-info", method: :get %>
      <%= link_to "Delete", video_path(@video), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
</div>
  