<div class="container card p-3 mb-2 bg-light text-dark">
 <div class = "text-center">
  <div class="header">
    <h2>Message: <%= message.sender_name%> to <%= message.recipient_name %></h2>
  </div>
  </div>
  <div class="card">
  
  <div class="card-body">
  <h6><strong>Message General Information</strong></h6>
    <ul>
        
        <li>Title <%=message.title %> </li>
        <li>Body: <%=message.body%> </li>

    <%= button_to 'Delete Message', message_path(message), method: :delete %>
 </ul>
  