<!DOCTYPE html>
<html>
  <head>
    <title>MemHelp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">MemHelp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home', home_path, class: 'nav-link'%>
          </li>
          <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to 'My Profile', user_path(current_user), class: 'nav-link'%>
          <% else %>
            <%= link_to 'My Profile', new_user_session_path, class: 'nav-link' %>
          <% end %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Messages</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Global Request Page</a>
          </li>
            <li class="nav-item">
              <%= link_to 'My Requests', requests_path, class: 'nav-link' %>
            </li>
        </ul>
        <ul class="navbar-nav">
        <% if user_signed_in? %>
          
            <%= link_to "Edit Profile", edit_user_registration_path, class: 'nav-link' %>
          </li>
         
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
          </li>
         
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>

      </div>
    </nav>
    <div id="flash-message-wrapper">
    <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> 
      </div>
    <% end %>
</div>

</div> 
   
    
    <main role="main" class="flex-shrink-0">
    <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-8">
        <%= yield %>
      </div>

  </body>
</html>
