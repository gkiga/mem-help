<!DOCTYPE html>
<html>
  <head>
    <title>MemHelp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">MemHelp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home', home_path, class: 'nav-link'%>
          </li>
          <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to 'My Profile', user_path(current_user), class: 'nav-link'%>
          <% else %>
            <%= link_to 'My Profile', new_user_session_path, class: 'nav-link' %>
          <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", messages_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Global Request Page</a>
          </li>
            <li class="nav-item">
              <%= link_to 'My Requests', requests_path, class: 'nav-link' %>
            </li>
        </ul>
      <ul class="navbar-nav ml-auto">
      <% if current_user %>
      <li class="nav-item btn-group">
        <a class="dropdown-toggle nav-link" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="">
          <%=current_user.my_notifications.unread.count %> </span><%= 'ðŸ””'%>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
          <%current_user.my_notifications.each do |my_notification| %>
            <a class="dropdown-item" href= <%= request_path(my_notification.notifiable)%> ><%= my_notification.action %> from <%=  my_notification.actor.first_name %>: <%= my_notification.notifiable.description %></a>
            <%#= link_to my_notification.action, "#{my_notification.notifiable_type.downcase}s/#{my_notification.notifiable.id}", class:"dropdown-item" %>
          <% end %>
          <div class="dropdown-divider"></div>
            <%= link_to "Clear Notifications", my_notification_url(current_user.my_notifications.all), method: :delete, class:"dropdown-item" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.username %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit Profile", edit_user_registration_path, class:"dropdown-item" %>
           <%= link_to "Messages", messages_path, class:"dropdown-item" %>
          
          <div class="dropdown-divider"></div>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class:'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign In", new_user_session_path, class:'nav-link' %>
      </li>
      <% end %>
      </ul>

      </div>
    </nav>
    <div id="flash-message-wrapper">
    <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> 
      </div>
    <% end %>
</div>

</div> 
   
    
    <main role="main" class="flex-shrink-0">
    <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-8">
        <%= yield %>
      </div>

  </body>
</html>
